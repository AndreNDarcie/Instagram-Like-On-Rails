<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% @posts.each do |x| %>
        <div class="panel panel-default">
          <div class="panel-body">
          <%= image_tag x.image.url, class: 'img-responsive img-thumbnail' %>
          <br>
          <p>
            <%= x.description %>
          </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
